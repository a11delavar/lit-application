{
	"repository": {
		"type": "git",
		"url": "git+https://github.com/a11delavar/lit-application.git"
	},
	"workspaces": [
		"./packages/*"
	],
	"type": "module",
	"author": "a11d",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/a11delavar/lit-application/issues"
	},
	"homepage": "https://github.com/a11delavar/lit-application#readme",
	"scripts": {
		"start": "node ./scripts/demo.ts",
		"dev": "node ./scripts/test.ts",
		"build": "tsc -p ./packages/Application/tsconfig.json && tsc -p ./packages/Native/tsconfig.json",
		"test": "node ./scripts/test.ts && karma start --single-run",
		"lint": "eslint \"**/*.ts\"",
		"typescript": "tsc --build --noEmit && npm run clean",
		"clean": "node ./scripts/clean.ts",
		"release": "node ./scripts/release.ts",
		"release-all": "node ./scripts/release-all.ts",
		"watch": "npm-watch"
	},
	"watch": {
		"dev": {
			"patterns": [
				"packages"
			],
			"extensions": "ts"
		}
	},
	"devDependencies": {
		"@a11d/eslint-config": "x",
		"karma": "x",
		"karma-chrome-launcher": "x",
		"karma-firefox-launcher": "x",
		"karma-helpful-reporter": "x",
		"@types/jasmine": "x",
		"karma-jasmine": "x",
		"typescript": "5.x",
		"esbuild": "0.x",
		"esbuild-server": "0.x",
		"npm-watch": "0.x",
		"tsc-watch": "6.x",
		"open": "x"
	}
}
